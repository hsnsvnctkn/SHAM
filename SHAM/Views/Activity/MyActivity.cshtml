                                        {
                                            <td id="@item.ID-invoice" class="tableexport-string">Evet</td>
                                        }
                                        @if (item.INVOICE == false)
                                        {
                                            <td id="@item.ID-invoice" class="tableexport-string">Hayır</td>
                                        }
