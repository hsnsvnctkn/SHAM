@section scripts{
    <script>
        $(".viewModelDel").click(function () {
            var id = $(this).data("id");
            var name = $(this).data("name");

            document.getElementById("IdDel").value = id;
        });

        $("#BtnCreate").click(function () {
            $("#createForm").ajaxSubmit({
                url: '/Activity/Create',
                type: 'post',
                success: function (result) {
                    if (result.status)
                        window.location.reload();
                    else
                        alert("Hata");
                }
            })
        });

        $(".fBtnEdit").click(function () {
            var id = $(this).data("id");
            var project = $("#" + id + "-project", "#tb").data("id");
            var invoice = $("#" + id + "-invoice", "#tb").html();
            var priority = $("#" + id + "-priority", "#tb").data("id");
            var detail = $("#" + id + "-detail", "#tb").html();
            var estStart = $("#" + id + "-estStart", "#tb").html();
            var estEnd = $("#" + id + "-estEnd", "#tb").html();
            var start = $("#" + id + "-start", "#tb").html();
            var end = $("#" + id + "-end", "#tb").html();
            var creator = $("#" + id + "-creator", "#tb").data("id");
            var status = $("#" + id + "-status", "#tb").html();

            //var employees = new Array();
            //$("#" + id + "-employee>option").each(function () {
            //    employees.push($(this).val());
            //})

            if (status == "Aktif")
                status = true;
            else if (status == "Pasif")
                status = false;

            if (invoice == "Evet")
                invoice = true;
            else if (invoice == "Hayır")
                invoice = false;

            document.getElementById("activtyID").value = id;
            document.getElementById("PROJECT_NUMBER").value = project;
            document.getElementById("INVOICE").value = invoice;
            document.getElementById("ACTIVITY_PRIORITY").value = priority;
            document.getElementById("DETAIL").value = detail;
            document.getElementById("STATUS").value = status;
            document.getElementById("EST_START_DATE").value = estStart;
            document.getElementById("EST_END_DATE").value = estEnd;
            document.getElementById("START_DATE").value = start;
            document.getElementById("END_DATE").value = end;
            document.getElementById("CREATOR").value = creator;
            document.getElementById("hideCreator").value = creator;


            //$('select[name=NEWACTIVITYEMPLOYEE]').val(employees);
            //$('.selectpicker').selectpicker('refresh');
        })

        $("#BtnEdit").click(function () {
            $("#editForm").ajaxSubmit({
                url: '/Activity/Edit', type: 'post',
                success: function (result) {
                    if (result.status) {
                        window.location.reload();
                    }
                    else
                        alert("hata");
                }
            })
        });

        $('.datePicker').datetimepicker({
            format: 'DD.MM.YYYY',
        });

        $('.selectpicker').selectpicker({
            noneSelectedText: 'Seçim Yapılmadı',
            selectAllText: 'Tümü',
            deselectAllText: 'Hiçbiri',
            size: 'auto',

        });

    </script>
}
