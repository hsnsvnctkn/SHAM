
@{
    ViewData["Title"] = "Aktivitelerim";
}



<div class="ecommerce-widget">
    <div class="row" style="justify-content: center;">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Activitelerim</h2>
            </div>
        </div>
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">Aktivite Bilgileri</h5>
                <button class="btn btn-outline-success" data-toggle="modal" data-target="#create">Yeni Aktivite ekle</button>
                <div class="row" style="margin:5px;">
                    <form asp-action="MyActivity">
                        <div class="col-md-auto">
                            <input type="hidden" name="All" value="true" />
                            <input type="submit" class="btn" value="Hepsini Göster" />
                        </div>
                    </form>
                    <form>
                        <div class="col-md-auto">
                            <input type="hidden" name="All" value="false" />
                            <input type="submit" class="btn" value="Sadece Bu Ay'ı Göster" />
                        </div>
                    </form>
                    <div class="col text-right">
                        <button class="btn btn-outline-success fas fa-file-excel" tableexport-id="a70aea2-xlsx"> &nbsp; Excel Olarak Indir</button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <div id="refresh" class="table-hover">
                            <table class="table table-striped table-bordered dataTable" style="width: 100%;" role="grid" aria-describedby="example_info" id="tb" data-name="cool-table">
                                <thead class="bg-light">
                                    <tr class="border-0">
                                        <th class="border-0"></th>
                                        <th class="border-0">#</th>
                                        <th class="border-0">Proje</th>
                                        <th class="border-0">Oluşturan</th>
                                        <th class="border-0">Durum</th>
                                        <th class="border-0">Önceliği</th>
                                        <th class="border-0">Fatura</th>
                                        <th class="border-0">Detay</th>
                                        <th class="border-0">Aktivite Tarihi</th>
                                        <th class="border-0">Başlama Saati</th>
                                        <th class="border-0">Bitiş Saati</th>
                                        <th class="border-0">Oluşturma Tarihi</th>
                                        <th class="border-0">Oluşturma Saati</th>
                                        <th class="border-0"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ActivityDto)
                                    {
                                        <tr>
                                            <td><button type="button" data-id="@item.ID" data-toggle="modal" data-target="#edit" class="btn btn-outline-primary fBtnEdit">Düzenle</button></td>
                                            <td id="@item.ID">@item.ID </td>
                                            <td id="@item.ID-project" data-id="@item.PROJECT.ID">@item.PROJECT.PROJECT_NAME</td>
                                            <td id="@item.ID-creator" data-id="@item.CREATED_EMPLOYEE.ID">@item.CREATED_EMPLOYEE.EMPLOYEE_NAME @item.CREATED_EMPLOYEE.EMPLOYEE_SURNAME</td>
                                            @if (item.STATUS == true)
                                            {
                                                <td id="@item.ID-status">Aktif</td>
                                            }
                                            @if (item.STATUS == false)
                                            {
                                                <td id="@item.ID-status">Pasif</td>
                                            }
                                            <td id="@item.ID-priority" data-id="@item.PRIORITY.ID">@item.PRIORITY.PRIORITY_NAME</td>
                                            @if (item.INVOICE == true)
                                            {
                                                <td id="@item.ID-invoice">Evet</td>
                                            }
                                            @if (item.INVOICE == false)
                                            {
                                                <td id="@item.ID-invoice">Hayır</td>
                                            }
                                            <td id="@item.ID-detail">@item.ACTIVITY_DETAIL</td>
                                            <td id="@item.ID-estStart">@item.ACTIVITY_DATE.ToString("dd/MM/yyyy")</td>
                                            <td id="@item.ID-start">@item.START_TIME.ToString("hh':'mm':'ss")</td>
                                            <td id="@item.ID-end">@item.END_TIME.ToString("hh':'mm':'ss")</td>
                                            <td>@item.CREATED_DATE.ToString("dd/MM/yyyy")</td>
                                            <td>@item.CREATED_TIME.ToString("hh':'mm':'ss")</td>
                                            <td>
                                                <button type="button" class="btn btn-outline-danger viewModelDel" data-toggle="modal" data-target="#delete" data-id="@item.ID">Sil</button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!------------Modals --------->
<!-- Delete -->
<div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Aktivite Sil</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="MyDelete" method="post" role="form">
                <div class="modal-body">
                    <div class="card-body">
                        <div class="form-group">
                            Aktiviteyi Silmek istediğinize emin misiniz ?
                            <input type="hidden" id="IdDel" value="" name="ID" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-danger" asp-action="MyDelete">Sil</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!--Create-->
<div class="modal fade" id="create" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Yeni Aktivite Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <form id="createForm" role="form">
                    <div class="modal-body">
                        <div class="card-body">
                            <div class="form-group">
                                <input type="hidden" name="ID" />
                            </div>
                            <div class="form-group row">
                                <label class="col-12 col-sm-5 col-form-label text-sm-right">Projesi</label>
                                <div class="col-12 col-sm-8 col-lg-6">
                                    <select class="custom-select" name="PROJECT_NUMBER">
                                        @foreach (var item in Model.ProjectDto)
                                        {
                                            <option value="@item.ID">@item.NAME</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-12 col-sm-5 col-form-label text-sm-right">Durumu</label>
                                <div class="col-12 col-sm-8 col-lg-6">
                                    <select class="custom-select" name="STATUS" typeof="bool">
                                        <option selected value="true">Aktif</option>
                                        <option value="false">Pasif</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-12 col-sm-5 col-form-label text-sm-right">Önceliği</label>
                                <div class="col-12 col-sm-8 col-lg-6">
                                    <select class="custom-select" name="ACTIVITY_PRIORITY">
                                        @foreach (var item in Model.PriorityDto)
                                        {
                                            <option value="@item.ID">@item.NAME</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-12 col-sm-5 col-form-label text-sm-right">Fatura</label>
                                <div class="col-12 col-sm-8 col-lg-6">
                                    <select class="custom-select" name="INVOICE" typeof="bool">
                                        <option selected value="true">Evet</option>
                                        <option value="false">Hayır</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-12 col-sm-5 col-form-label text-sm-right">Detay</label>
                                <div class="col-12 col-sm-8 col-lg-6">
                                    <textarea name="ACTIVITY_DETAIL" class="form-control" autocomplete="off" data-parsley-maxlength="100" placeholder="Activite Detayı" id="exampleFormControlTextarea1" rows="3" style="margin-top: 0px; margin-bottom: 0px; height: 119px;"></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-12 col-sm-5 col-form-label text-sm-right">Aktivite Tarihi</label>
                                <div class="input-group date col-12 col-sm-8 col-lg-6 datePicker" id="mydatetimepicker5" data-target-input="nearest">
                                    <input type="text" value="" class="form-control datetimepicker-input" data-target="#mydatetimepicker5" name="ACTIVITY_DATE">
                                    <div class="input-group-append" data-target="#mydatetimepicker5" data-toggle="datetimepicker">
                                        <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-12 col-sm-5 col-form-label text-sm-right">Başlama Saati</label>
                                <div class="col-12 col-sm-8 col-lg-6">
                                    <input name="START_TIME" type="time" style="width: inherit;" class="form-control">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-12 col-sm-5 col-form-label text-sm-right">Bitiş Saati</label>
                                <div class="col-12 col-sm-8 col-lg-6">
                                    <input name="END_TIME" type="time" style="width: inherit;" class="form-control">
                                </div>
                            </div>
                            <div class="form-group row text-right">
                                <div class="col col-sm-10 col-lg-9 offset-sm-1 offset-lg-0">
                                    <button type="button" class="btn btn-space btn-success" id="BtnCreate">Ekle</button>
                                    <button type="button" class="btn btn-space btn-secondary" data-dismiss="modal">Kapat</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

