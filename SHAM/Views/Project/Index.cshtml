@model SHAM.Repository.Dto.ProjectAllDto
@{
    ViewData["Title"] = "Projeler";
}

<!--Database-->
<div class="ecommerce-widget">

    <div class="row" style="justify-content: center;">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Müsteriler</h2>
            </div>
        </div>
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">Müsteri Bilgileri</h5>
                <button class="btn btn-outline-success" data-toggle="modal" data-target="#create">Yeni Müsteri Ekle</button>
                <div class="text-center">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <div class="table-hover">
                                <table class="table table-striped table-bordered first" id="tb">
                                    <thead class="bg-light">
                                        <tr class="border-0">
                                            <th class="border-0"></th>
                                            <th class="border-0">#</th>
                                            <th class="border-0">Ad</th>
                                            <th class="border-0">Tipi</th>
                                            <th class="border-0">Müşterisi</th>
                                            <th class="border-0">Çalışanlar</th>
                                            <th class="border-0">Durum</th>
                                            <th class="border-0">Seviye</th>
                                            <th class="border-0">Oluşturan</th>
                                            <th class="border-0">Pln. Baş. Tarihi</th>
                                            <th class="border-0">Pln. Btş. Tarihi</th>
                                            <th class="border-0">Başlama Tarihi</th>
                                            <th class="border-0">Bitiş Tarihi</th>
                                            <th class="border-0">Oluşturma Tarihi</th>
                                            <th class="border-0">Oluşturma Saati</th>
                                            <th class="border-0"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.ProjectDto)
                                        {
                                            <tr>
                                                <td><button type="button" data-id="@item.ID" data-toggle="modal" data-target="#edit" class="btn btn-outline-primary fBtnEdit">Düzenle</button></td>
                                                <td id="@item.ID">@item.ID </td>
                                                <td id="@item.ID-name">@item.NAME</td>
                                                <td id="@item.ID-type">@item.PROJECT_TYPE_.TYPE_NAME</td>
                                                <td id="@item.ID-customer">@item.CUSTOMER.CUSTOMER_NAME
                                                <td>
                                                <td>
                                                    <select id="@item.ID-employee">
                                                        @foreach (var emp in item.EMPLOYEES)
                                                        {
                                                            <option>@emp.EMPLOYEE.EMPLOYEE_NAME @emp.EMPLOYEE.EMPLOYEE_SURNAME</option>
                                                        }
                                                    </select>
                                                </td>
                                                @if (item.STATUS == true)
                                                {
                                                    <td id="@item.ID-status">Aktif</td>
                                                }
                                                @if (item.STATUS == false)
                                                {
                                                    <td id="@item.ID-status">Pasif</td>
                                                }
                                                <td id="@item.ID-level">@item.LEVEL.LEVEL_NAME</td>
                                                <td id="@item.ID-creator" data-id="@item.CREATED_EMPLOYEE.ID">@item.CREATED_EMPLOYEE.EMPLOYEE_NAME @item.CREATED_EMPLOYEE.EMPLOYEE_SURNAME</td>
                                                <td>@item.CREATED_DATE</td>
                                                <td>@item.CREATED_TIME</td>
                                                <td>
                                                    <button type="button" class="btn btn-outline-danger viewModelDel" data-toggle="modal" data-target="#delete" data-name="@item.NAME" data-id="@item.ID">Sil</button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
