@model SHAM.Repository.Dto.EmpConsDto
@{
    ViewData["Title"] = "Çalışanlar";
}

<div class="ecommerce-widget">

    <div class="row" style="justify-content: center;">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Çalışanlar</h2>
            </div>
        </div>
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">Çalışanların Bilgileri</h5>
                <button class="btn btn-outline-success" data-toggle="modal" data-target="#create">Yeni Çalışan Ekle</button>
                <div class="text-center">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <div class="table-hover">
                                <table class="table table-striped table-bordered first" id="tb">
                                    <thead class="bg-light">
                                        <tr class="border-0">
                                            <th class="border-0">#</th>
                                            <th class="border-0">Ad</th>
                                            <th class="border-0">Soyad</th>
                                            <th class="border-0">Tel</th>
                                            <th class="border-0">Adres</th>
                                            <th class="border-0">E-Mail</th>
                                            <th class="border-0">Durum</th>
                                            <th class="border-0">Ünvan</th>
                                            <th class="border-0">Oluşturan</th>
                                            <th class="border-0">Oluşturma Tarihi</th>
                                            <th class="border-0">Oluşturma Saati</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.EmployeeDto)
                                        {
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.NAME</td>
                                                <td>@item.SURNAME</td>
                                                <td>@item.PHONE_NO</td>
                                                <td>@item.ADRESS</td>
                                                <td>@item.MAIL</td>
                                                @if (item.STATUS == true)
                                                {
                                                    <td>Aktif</td>
                                                }
                                                @if (item.STATUS == false)
                                                {
                                                    <td>Pasif</td>
                                                }
                                                <td>@item.TITLE.TITLE_NAME</td>
                                                <td>@item.CREATOR_ID</td>
                                                <td>@item.CREATED_DATE</td>
                                                <td>@item.CREATED_TIME</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> @*Database ----------------------*@

</div>

<!------------Modals --------->
<div class="modal fade" id="create" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Yeni Proje Seviyesi</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="modal-body">
                    <form id="validationform" data-parsley-validate="" novalidate="" method="post" role="form" asp-action="Create">
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-12 col-sm-3 col-form-label text-sm-right">Ad </label>
                                <div class="col-12 col-sm-8 col-lg-6">
                                    <input type="text" name="NAME" required="" data-parsley-maxlength="50" placeholder="Ad" class="form-control">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-12 col-sm-3 col-form-label text-sm-right">Soyad </label>
                                <div class="col-12 col-sm-8 col-lg-6">
                                    <input type="text" name="SURNAME" required="" data-parsley-maxlength="50" placeholder="Soyad" class="form-control">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-12 col-sm-3 col-form-label text-sm-right">Telefon Numarası </label>
                                <div class="col-12 col-sm-8 col-lg-6">
                                    <input data-parsley-type="number" name="PHONE_NO" type="text" required="" data-parsley-maxlength="13" placeholder="Telefon Numarası" class="form-control">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-12 col-sm-3 col-form-label text-sm-right">Adres</label>
                                <div class="col-12 col-sm-8 col-lg-6">
                                    <textarea required="" name="ADRESS" data-parsley-maxlength="100" placeholder="Adres" class="form-control"></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-12 col-sm-3 col-form-label text-sm-right">E-Mail</label>
                                <div class="col-12 col-sm-8 col-lg-6">
                                    <input type="email" name="MAIL" required="" data-parsley-type="email" placeholder="Mail Adresi" class="form-control">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-12 col-sm-3 col-form-label text-sm-right">Durumu</label>
                                <div class="col-12 col-sm-8 col-lg-6">
                                    <select class="custom-select" name="STATUS">
                                        <option selected value="True">Aktif</option>
                                        <option value="False">Pasif</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-12 col-sm-3 col-form-label text-sm-right">Ünvanı</label>
                                <div class="col-12 col-sm-8 col-lg-6">
                                    <select class="custom-select" name="TITLE_ID">
                                        @foreach (var item in Model.TitleDto)
                                        {
                                            <option value="@item.ID">@item.NAME</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-12 col-sm-3 col-form-label text-sm-right">Oluşturan Kişi</label>
                                <div class="col-12 col-sm-8 col-lg-6">
                                    <select class="custom-select" name="CREATOR_ID">
                                        @foreach (var item in Model.EmployeeDto)
                                        {
                                            <option value="@item.ID">@item.NAME @item.SURNAME</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row text-right">
                                <div class="col col-sm-10 col-lg-9 offset-sm-1 offset-lg-0">
                                    <button type="submit" class="btn btn-space btn-success" asp-action="Create">Ekle</button>
                                    <button class="btn btn-space btn-secondary">Kapat</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
