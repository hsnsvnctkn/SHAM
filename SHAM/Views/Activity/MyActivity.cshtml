@section scripts{
    <script>
        $(document).ready(function () {
            $('table').DataTable();

            $('table').tableExport({
                headers: true,
                footers: true,
                formats: ["xlsx", "csv", "txt"],
                filename: "Aktiviteler",
                bootstrap: true,
                exportButtons: false,
                position: "bottom",
                ignoreRows: null,
                ignoreCols: [0, 13],
                trimWhitespace: true,
                RTL: false,
                sheetname: "Aktiviteler"
            });
        });



        $(".viewModelDel").click(function () {
            var id = $(this).data("id");
            var name = $(this).data("name");

            document.getElementById("IdDel").value = id;
        });

        $("#BtnCreate").click(function () {
            $("#createForm").ajaxSubmit({
                url: '/Activity/Create',
                type: 'post',
                success: function (result) {
                    if (result.status) {
                        showCreateAlert();
                    }
                    else
                        showAlert();
                }
            })
        });

        $(".fBtnEdit").click(function () {
            var id = $(this).data("id");
            var project = $("#" + id + "-project", "#tb").data("id");
            var invoice = $("#" + id + "-invoice", "#tb").html();
            var priority = $("#" + id + "-priority", "#tb").data("id");
            var detail = $("#" + id + "-detail", "#tb").html();
            var actDate = $("#" + id + "-estStart", "#tb").html();
            var start = $("#" + id + "-start", "#tb").html();
            var end = $("#" + id + "-end", "#tb").html();
            var status = $("#" + id + "-status", "#tb").html();


            if (status == "Aktif")
                status = true;
            else if (status == "Pasif")
                status = false;

            if (invoice == "Evet")
                invoice = true;
            else if (invoice == "Hayır")
                invoice = false;

            document.getElementById("activtyID").value = id;
            document.getElementById("PROJECT_NUMBER").value = project;
            document.getElementById("INVOICE").value = invoice;
            document.getElementById("ACTIVITY_PRIORITY").value = priority;
            document.getElementById("DETAIL").value = detail;
            document.getElementById("STATUS").value = status;
            document.getElementById("ACTIVITY_DATE").value = actDate;
            document.getElementById("START_TIME").value = start;
            document.getElementById("END_TIME").value = end;


        })

        $("#BtnEdit").click(function () {
            $("#editForm").ajaxSubmit({
                url: '/Activity/Edit', type: 'post',
                success: function (result) {
                    if (result.status) {
                        showCreateAlert();
                    }
                    else
                        showAlert();
                }
            })
        });

        $('.datePicker').datetimepicker({
            format: 'DD.MM.YYYY',
        });

        $('.selectpicker').selectpicker({
            noneSelectedText: 'Seçim Yapılmadı',
            selectAllText: 'Tümü',
            deselectAllText: 'Hiçbiri',
            size: 'auto',

        });
        $('#tb').DataTable({
            language: {
                info: "_TOTAL_ kayıttan _START_ - _END_ kayıt gösteriliyor.",
                infoEmpty: "Gösterilecek hiç kayıt yok.",
                loadingRecords: "Kayıtlar yükleniyor.",
                zeroRecords: "Tablo boş",
                search: "Arama:",
                infoFiltered: "(toplam _MAX_ kayıttan filtrelenenler)",
                lengthMenu: "Sayfada _MENU_ Kayıt Göster",
                paginate: {
                    first: "İlk",
                    previous: "Önceki",
                    next: "Sonraki",
                    last: "Son"
                },
            },
            responsive: true
        });
    </script>
}

