@model SHAM.Repository.Dto.ActivityAllDto
@{
    ViewData["Title"] = "Aktiviteler";
}


<div class="ecommerce-widget">
    <div class="row" style="justify-content: center;">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Activiteler</h2>
            </div>
        </div>
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">Aktivite Bilgileri</h5>
                <button class="btn btn-outline-success" data-toggle="modal" data-target="#create">Yeni Aktivite ekle</button>
                <div class="text-center">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <div class="table-hover">
                                <table class="table table-striped table-bordered first" id="tb">
                                    <thead class="bg-light">
                                        <tr class="border-0">
                                            <th class="border-0"></th>
                                            <th class="border-0">#</th>
                                            <th class="border-0">Proje</th>
                                            <th class="border-0">Çalışanları</th>
                                            <th class="border-0">Oluşturan</th>
                                            <th class="border-0">Durum</th>
                                            <th class="border-0">Önceliği</th>
                                            <th class="border-0">Fatura</th>
                                            <th class="border-0">Detay</th>
                                            <th class="border-0">Pln. Baş. Tarihi</th>
                                            <th class="border-0">Pln. Btş. Tarihi</th>
                                            <th class="border-0">Başlama Tarihi</th>
                                            <th class="border-0">Bitiş Tarihi</th>
                                            <th class="border-0">Oluşturma Tarihi</th>
                                            <th class="border-0">Oluşturma Saati</th>
                                            <th class="border-0"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.ActivityDto)
                                        {
                                            <tr>
                                                <td><button type="button" data-id="@item.ID" data-toggle="modal" data-target="#edit" class="btn btn-outline-primary fBtnEdit">Düzenle</button></td>
                                                <td id="@item.ID">@item.ID </td>
                                                <td id="@item.ID-project" data-id="@item.PROJECT.ID">@item.PROJECT.PROJECT_NAME</td>
                                                <td>
                                                    <select class="custom-select" id="@item.ID-employee">
                                                        @*@foreach (var emp in item.EMPLOYEES)
                                                            {
                                                                <option value="@emp.EMPLOYEE.ID">@emp.EMPLOYEE.EMPLOYEE_NAME @emp.EMPLOYEE.EMPLOYEE_SURNAME</option>
                                                            }*@
                                                    </select>
                                                </td>
                                                <td id="@item.ID-creator" data-id="@item.CREATED_EMPLOYEE.ID">@item.CREATED_EMPLOYEE.EMPLOYEE_NAME @item.CREATED_EMPLOYEE.EMPLOYEE_SURNAME</td>
                                                @if (item.STATUS == true)
                                                {
                                                    <td id="@item.ID-status">Aktif</td>
                                                }
                                                @if (item.STATUS == false)
                                                {
                                                    <td id="@item.ID-status">Pasif</td>
                                                }
                                                <td id="@item.ID-priority" data-id="@item.PRIORITY.ID">@item.PRIORITY.PRIORITY_NAME</td>
                                                @if (item.INVOICE == true)
                                                {
                                                    <td id="@item.ID-invoice">Evet</td>
                                                }
                                                @if (item.INVOICE == false)
                                                {
                                                    <td id="@item.ID-invoice">Hayır</td>
                                                }
                                                <td id="@item.ID-detail">@item.ACTIVITY_DETAIL</td>
                                                <td id="@item.ID-estStart">@item.EST_START_DATE.ToString("dd/MM/yyyy")</td>
                                                <td id="@item.ID-estEnd">@item.EST_END_DATE.ToString("dd/MM/yyyy")</td>
                                                <td id="@item.ID-start">@item.START_DATE?.ToString("dd/MM/yyyy")</td>
                                                <td id="@item.ID-end">@item.END_DATE?.ToString("dd/MM/yyyy")</td>
                                                <td>@item.CREATED_DATE.ToString("dd/MM/yyyy")</td>
                                                <td>@item.CREATED_TIME.ToString("hh':'mm':'ss")</td>
                                                <td>
                                                    <button type="button" class="btn btn-outline-danger viewModelDel" data-toggle="modal" data-target="#delete" data-id="@item.ID">Sil</button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!------------Modals --------->
<!-- Delete -->
<div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Aktivite Sil</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="Delete" method="post" role="form">
                <div class="modal-body">
                    <div class="card-body">
                        <div class="form-group">
                            Aktiviteyi Silmek istediğinize emin misiniz ?
                            <input type="hidden" id="IdDel" value="" name="ID" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-danger" asp-action="Delete">Sil</button>
                </div>
            </form>
        </div>
    </div>
</div>

