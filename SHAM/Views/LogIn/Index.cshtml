@model SHAM.Repository.Dto.UserDto
@{
    Layout = "/Views/Shared/LoginLayout.cshtml";
    ViewData["Title"] = "Giriş";
}
@if (User.Identity.IsAuthenticated)
{
    Url.Action("Index", "Home");
}
else
{
    <div class="splash-container">
        <div class="card ">
            <div class="card-header text-center">
                <h2 class="text-primary font-weight-bold">SHAM</h2><span class="splash-description">Lütfen Giris Yapınız.</span>
            </div>
            <div class="card-body">
                <form id="loginForm" role="form" asp-action="LoginUser">
                    <div class="form-group">
                        <input type="email" name="EMAIL" required="" data-parsley-type="email" placeholder="Mail Adresi" class="form-control form-control-lg">
                    </div>
                    <div class="form-group">
                        <input type="password" name="PASSWORD" required="" data-parsley-type="email" placeholder="Şifre" class="form-control form-control-lg">
                    </div>
                    <div class="form-group">
                        <label class="custom-control custom-checkbox">
                            <input class="custom-control-input" type="checkbox"><span class="custom-control-label">Beni Hatırla</span>
                        </label>
                    </div>
                    <button type="button" id="BtnLogin" class="btn btn-primary btn-lg btn-block">Giriş Yap</button>
                </form>
            </div>
            <div class="card-footer bg-white p-0  ">
                <div class="card-footer-item card-footer-item-bordered">
                    <a asp-controller="LogIn" asp-action="NewMember" class="footer-link">Yeni Hesap Oluştur</a>
                </div>
                <div class="card-footer-item card-footer-item-bordered">
                    <a asp-controller="LogIn" asp-action="ForgotPassword" class="footer-link">Şifremi Unuttum</a>
                </div>
            </div>
        </div>
    </div>
}



@section scripts{
    <script>

        $("#BtnLogin").click(function () {
            $("#loginForm").ajaxSubmit({
                url: '/LogIn/LoginUser',
                type: 'post',
                success: function (result) {
                    if (result.status)
                        window.location.href = '/Home/Index';
                    else
                        showAlert();

                }
            })
        });
    </script>
}